# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (for server-side operations)
# ⚠️ CRITICAL: Never commit this key to version control
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (optional - for direct DB access)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.your-project.supabase.co:5432/postgres

# Authentication Configuration
NEXTAUTH_SECRET=generate_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Admin API Key (for monitoring endpoints)
ADMIN_API_KEY=generate_secure_admin_key_here

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
ENCRYPTION_KEY=generate_32_byte_encryption_key_here

# Development/Production Environment
NODE_ENV=development

# To get these values:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Settings > API > Copy Project URL and anon key
# 4. Settings > API > Copy service_role key (KEEP SECRET!)
# 5. Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
