# ConfiguraciÃ³n de seguridad para StartupMatch

# Encryption Keys (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-character-encryption-key-here-replace-this
NEXT_PUBLIC_ENCRYPTION_ENABLED=true

# Security Event Logging
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SECURITY_LOGGING_ENABLED=true

# Alert Webhooks (Optional - for security notifications)
SECURITY_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
SECURITY_TEAMS_WEBHOOK=https://your-teams-webhook-url
SECURITY_DISCORD_WEBHOOK=https://your-discord-webhook-url

# Rate Limiting (Redis for production - Optional)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# GDPR Compliance
DATA_RETENTION_DAYS=2555  # 7 years for audit logs
COOKIE_CONSENT_REQUIRED=true
GDPR_COMPLIANCE_ENABLED=true

# Security Headers
CSP_REPORT_URI=https://your-domain.com/api/csp-report
SECURITY_HEADERS_ENABLED=true

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Rate Limits (requests per time window)
RATE_LIMIT_AUTH=5         # per 15 minutes
RATE_LIMIT_API=60         # per minute  
RATE_LIMIT_UPLOAD=10      # per hour
RATE_LIMIT_SEARCH=30      # per minute
RATE_LIMIT_MESSAGES=100   # per minute

# Security Monitoring
SECURITY_DASHBOARD_ENABLED=true
THREAT_DETECTION_ENABLED=true
AUTO_LOCKOUT_ENABLED=true

